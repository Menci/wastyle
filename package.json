{
  "name": "wastyle",
  "version": "0.0.1",
  "description": "AStyle code formatter compiled to WebAssembly, for Node.js and the browser.",
  "main": "dist/index.js",
  "author": "Menci",
  "repository": "https://github.com/Menci/wastyle",
  "license": "MIT",
  "dependencies": {
    "@wasmer/wasi": "^0.9.1",
    "wasi": "^0.0.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.10",
    "@types/node": "^13.7.7",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "3.1.0",
    "mocha": "^7.1.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.js\"",
    "build": "tsc -p .",
    "build:wasm": "bash build-wasm.sh",
    "test": "mocha test/*.js"
  },
  "files": [
    "/dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
